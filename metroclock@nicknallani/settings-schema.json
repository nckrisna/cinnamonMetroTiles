    },
    "title-color": {
        "type": "colorchooser",
        "default": "rgba(40,100,38)",
        "description": "Text Color",
        "tooltip": "Set the Text color of this desklet."
    }, 
    
    "font": {
        "type": "fontchooser",
        "default": "arial",
        "description": "Font"
    },

    "head2": {
        "type": "header",
        "description": "General"
    },    
    
    "bg-color": {
        "type": "colorchooser",
        "default": "rgb(32,50,14)",
        "description": "BG Color",
        "tooltip": "Set the BG color of this desklet."
